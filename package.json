{
  "name": "pfrng",
  "version": "0.1.0",
  "description": "Provably Fair Random Number Generator",
  "homepage": "https://github.com/andykswong/pfrng",
  "author": "Andy K.S. Wong <andykswong@outlook.com>",
  "license": "MIT",
  "keywords": [
    "prng",
    "chance",
    "provably",
    "fair",
    "crypto",
    "hash",
    "random"
  ],
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "exports": "./dist/index",
  "scripts": {
    "prepublishOnly": "npm run build && npm run test:cov && npm run doc",
    "clean": "rimraf coverage dist node_modules",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "prebuild": "npm run lint",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "doc": "typedoc --out dist/docs src/index.ts"
  },
  "dependencies": {
    "jssha": "^3.2.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "eslint": "^7.10.0",
    "jest": "^26.6.3",
    "rimraf": "^3.0.2",
    "ts-essentials": "^7.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typedoc": "^0.20.24",
    "typescript": "^4.1.3"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.tsx?$",
    "collectCoverageFrom": [
      "**/*.{ts,tsx}"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
