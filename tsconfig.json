{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "declaration": true,
    "sourceMap": true,
    "allowJs": true, 
    "lib": ["es6", "dom", "webworker"],
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ]
}
